<%- include ("../partials/header") %>
<div class="container">
		<h1 style="text-align: center" class="heading1">
		Add New Camp Site
		</h1>
		<div style="width: 30%;margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price" name="price" min="100" step="100" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="description" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
</div>

<%- include ("../partials/footer") %>